<h1 class="text-center header">Contact Us</h1>
<div class="col-lg-8 mx-auto">
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-sm-9 login-form">
			    <%= form_for(:message, url:  messages_path) do |f| %>
			      <div class='form-group'>
			      		<%= f.label :name, 'Enter Name' %>
			      		<%= f.text_field :name, class: 'form-control', required: true %>
						</div>
						<div class='form-group'>
							<%= f.label :email, class: 'control-label' %>
							<%= f.text_field :email,class: 'form-control', required: true %>
						</div>
						<div class='form-group'>
							<%= f.label :phone_number, class: 'control-label' %>
							<%= f.text_field :phone_number, class: 'form-control', required: true %>
						</div>
						<div class="form-group">
	            <%= f.label :body, class: 'control-label' %>
	            <%= f.text_area :body , placeholder:'Enter Message',class:"form-control", required: true %>
	          </div>
			      <%= f.submit "Submit", class: "btn btn-outline-primary" %>
			    <% end %>
			  </div>
			</div>
	  </div>
	</div>
</div>
